<h1>Meta</h1>

<table>
<thead>
  <tr>
    <th>Referência</th>
    <th>Início</th>
    <th>Fim</th>
    <th>Valor</th>
    <th>Total</th>
  </tr>
</thead>

<tbody>
    <tr>
      <td><%= "#{@meta.mes}/#{@meta.ano}" %></td>
      <td><%= l @meta.inicio, locale: :pt, format: :short %></td>
      <td><%= l @meta.fim, locale: :pt, format: :short %></td>
      <td> <%= number_to_currency(@meta.valor, locale: 'pt-BR') %></td>
      <td> <%= number_to_currency(@meta.total, locale: 'pt-BR') %></td>
    </tr>
</tbody>
</table>

<h2>Participação dos vendores sobre as vendas</h2>

<% total = @meta.total_por_vendedores(@loja.vendedores) %>



  <table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @loja.vendedores.each do |vendedor| %>
    <tr>
      <td><%= vendedor.nome %></td>
      <td><%= number_to_currency(total[vendedor.id], locale: 'pt-BR') %></td>
    </tr>  
    <% end %>  
  </tbody>
  </table>
  


<br>

<%= link_to 'Metas', loja_metas_path(@loja) %>